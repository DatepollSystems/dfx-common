{
  "name": "dfx-common",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "ngcc": "ngcc --properties es2015 browser module main --async false --first-only --create-ivy-entry-points",
    "prepare": "husky install",
    "pre-commit-hook": "pretty-quick --staged",
    "all:build": "npm run helper:build && npm run translate:build && npm run table:bs:build && npm run table:bs:demo:build",
    "all:test": "npm run helper:test:coverage",
    "helper:build": "rm -rf ./dist/dfx-helper/ && mkdir -p ./dist/dfx-helper && ng build dfx-helper --configuration production && cp ./LICENSE ./dist/dfx-helper/ && cp ./projects/dfx-helper/README.md ./dist/dfx-helper/ && cp ./projects/dfx-helper/CHANGELOG.md ./dist/dfx-helper/",
    "helper:publish": "cd ./dist/dfx-helper && npm publish && cd -",
    "helper:watch": "ng build dfx-helper --watch --configuration development",
    "helper:test": "ng test dfx-helper",
    "helper:test:coverage": "ng test dfx-helper --browsers=Headless --no-watch --code-coverage",
    "translate:publish": "cd ./dist/dfx-translate && npm publish && cd -",
    "translate:build": "rm -rf ./dist/dfx-translate/ && mkdir -p ./dist/dfx-translate && ng build dfx-translate --configuration production && cp ./LICENSE ./dist/dfx-translate/ && cp ./projects/dfx-translate/README.md ./dist/dfx-translate/",
    "translate:watch": "ng build dfx-translate --watch --configuration development",
    "translate:test": "ng test dfx-translate",
    "translate:test:coverage": "ng test dfx-translate --browsers=Headless --no-watch --code-coverage",
    "table:bs:demo:serve": "ng serve dfx-bootstrap-table-demo",
    "table:bs:demo:build": "ng build dfx-bootstrap-table-demo --configuration production",
    "table:bs:watch": "ng build dfx-bootstrap-table --watch --configuration development",
    "table:bs:build": "rm -rf ./dist/dfx-bootstrap-table/ && mkdir -p ./dist/dfx-bootstrap-table && ng build dfx-bootstrap-table --configuration production && cp ./LICENSE ./dist/dfx-bootstrap-table/ && cp ./projects/dfx-bootstrap-table/README.md ./dist/dfx-bootstrap-table/",
    "table:bs:publish": "cd ./dist/dfx-bootstrap-table && npm publish && cd -",
    "table:bs:test": "ng test dfx-bootstrap-table",
    "table:bs:test:coverage": "ng test dfx-bootstrap-table --browsers=Headless --no-watch --code-coverage"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.1.3",
    "@angular/animations": "^13.1.2",
    "@angular/cdk": "^13.1.2",
    "@angular/cli": "~13.1.3",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/compiler-cli": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/forms": "^13.1.2",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "bootstrap": "^5.1.3",
    "dfx-bootstrap-table": "^1.0.5",
    "husky": "^7.0.4",
    "jasmine-core": "~3.99.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^13.0.0",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.0",
    "typescript": "~4.5.2",
    "zone.js": "~0.11.4"
  }
}
